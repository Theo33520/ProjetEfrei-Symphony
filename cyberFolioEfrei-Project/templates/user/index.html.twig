{% extends 'base.html.twig' %}

{% block title %}UserEntity index{% endblock %}

{% block body %}
    <h1>UserEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Git_url</th>
                <th>Jobs</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_entity in user_entities %}
            <tr>
                <td>{{ user_entity.id }}</td>
                <td>{{ user_entity.firstname }}</td>
                <td>{{ user_entity.lastname }}</td>
                <td>{{ user_entity.email }}</td>
                <td>{{ user_entity.password }}</td>
                <td>{{ user_entity.gitUrl }}</td>
                <td>{{ user_entity.jobs }}</td>
                <td>{{ user_entity.age }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user_entity.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
